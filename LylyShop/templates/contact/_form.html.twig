{# Message flash envoi mail contact #}
{% for message in app.flashes('contact_error') %}
    <div class="col-md-12 alert alert-danger alert-dismissible fade show" role="alert"> {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}

{% for message in app.flashes('contact_success') %}
    <div class="col-md-12 alert alert-success alert-dismissible fade show mt-5" role="alert"> {{ message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}
                         


<div class="section pb_70">
	<div class="container ">
        <div class="row">
            <div class="col-xl-4 col-md-6">
            	<div class="contact_wrap contact_style3">
                    <div class="contact_icon">
                        <i class="linearicons-map2"></i>
                    </div>
                    <div class="contact_text">
                        <span>Adresse</span>
                        <p>14 pont Bourg, 39230 Le Chateley</p>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
            	<div class="contact_wrap contact_style3">
                    <div class="contact_icon">
                        <i class="linearicons-envelope-open"></i>
                    </div>
                    <div class="contact_text">
                        <span>Adresse mail</span>
                        <a href="mailto:info@sitename.com">lydia.grandclement[@]gmail.com </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
            	<div class="contact_wrap contact_style3">
                    <div class="contact_icon">
                        <i class="linearicons-tablet2"></i>
                    </div>
                    <div class="contact_text">
                        <span>Téléphone</span>
                        <p>06 81 52 57 72</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="medium_divider"></div>
    <div class="divider center_icon"><i class="ti-write"></i></div>
    <div class="medium_divider"></div>
</div>


<div class="section pt-0">
	<div class="container">
    	<div class="row">
        	<div class="col-lg-12">
            	<div class="heading_s1">
                	<h2>Contactez-nous</h2>
                </div>
                <p class="leads">Vous avez des questions, contactez nous et nous reviendrons vers vous pour vous apporter une réponse.</p>
                <div class="field_form">
                    {{ form_start(form) }}
                        <div class="row">
     
                            <div class="form-group col-md-6">
                                {{ form_row(form.name, {"label":"Votre nom :"}) }}
                             </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.email, {"label":"Votre email :"}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.phone, {"label":"Votre téléphone :"}) }}
                            </div>
                            <div class="form-group col-md-6">
                                {{ form_row(form.subject, {"label":"Votre sujet :"}) }}
                            </div>
                            <div class="form-group col-md-12">
                                {{ form_row(form.content, {"label":"Votre message :"}) }}
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-fill-out btn-block">{{ button_label|default('Envoyer votre message') }}</button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
</div>
